{
  "name": "@gemeente-tilburg/storybook",
  "description": "Storybook based on the NL Design System architecture",
  "author": "Community for NL Design System",
  "license": "EUPL-1.2",
  "keywords": [
    "nl-design-system"
  ],
  "private": true,
  "repository": {
    "type": "git+ssh",
    "url": "git@github.com:nl-design-system/tilburg.git",
    "directory": "packages/storybook"
  },
  "scripts": {
    "build": "storybook build --output-dir dist/ --config-dir config/",
    "clean": "rimraf dist/",
    "lint-build": "tsc --noEmit --project tsconfig.json",
    "storybook": "storybook dev --config-dir config/ --port 6006"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "8.6.12",
    "@storybook/addon-actions": "8.6.12",
    "@storybook/addon-docs": "8.6.12",
    "@storybook/addon-interactions": "8.6.12",
    "@storybook/addon-links": "8.6.12",
    "@storybook/addon-viewport": "8.6.12",
    "@storybook/manager-api": "8.6.12",
    "@storybook/react": "8.6.12",
    "@storybook/react-vite": "8.6.12",
    "@storybook/theming": "8.6.12",
    "@gemeente-tilburg/assets": "workspace:*",
    "@gemeente-tilburg/components-css": "workspace:*",
    "@gemeente-tilburg/components-react": "workspace:*",
    "@gemeente-tilburg/design-tokens": "workspace:*",
    "@gemeente-tilburg/font": "workspace:*",
    "@gemeente-tilburg/web-components-react": "workspace:*",
    "@gemeente-tilburg/web-components-stencil": "workspace:*",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@utrecht/component-library-react": "4.2.0",
    "@utrecht/components": "6.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rimraf": "6.0.1",
    "storybook": "8.6.12",
    "typescript": "5.8.3",
    "vite": "5.4.10"
  },
  "dependencies": {
    "@amsterdam/design-system-css": "0.16.0",
    "@amsterdam/design-system-react": "0.16.0",
    "@amsterdam/design-system-assets": "0.3.0",
    "@amsterdam/design-system-tokens": "0.16.0",
    "clsx": "2.1.1"
  }
}
